{
  "extends": ["next"],
  "rules": {
    "@typescript-eslint/no-unused-vars": "off",
    "react/no-unescaped-entities": "off",
    "@next/next/no-html-link-for-pages": "off",
    "react-hooks/exhaustive-deps": "warn",
    "no-unused-vars": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "prefer-const": "warn"
  },
  "ignorePatterns": [
    "node_modules/**",
    ".next/**",
    "out/**", 
    "build/**",
    "*.bat",
    "*.cjs",
    "*debug*.js",
    "test-*.js",
    "prepare-production.js"
  ]
}